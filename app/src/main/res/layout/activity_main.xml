<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:junker="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#889fdf"
    tools:context=".MainActivity">

    <com.junker.custom.view.customview.numberinput.InputNumberView
        android:id="@+id/input_number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        junker:layout_constraintBottom_toBottomOf="parent"
        junker:layout_constraintEnd_toEndOf="parent"
        junker:layout_constraintStart_toStartOf="parent"
        junker:layout_constraintTop_toTopOf="parent" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        junker:layout_constraintBottom_toBottomOf="parent"
        android:onClick="loginBtn"
        junker:layout_constraintEnd_toEndOf="parent"
        junker:layout_constraintStart_toStartOf="parent"
        android:text="登录"/>


</androidx.constraintlayout.widget.ConstraintLayout>