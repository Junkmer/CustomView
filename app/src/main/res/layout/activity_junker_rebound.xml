<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".customview.rebound.JunkerReboundActivity">

    <com.junker.custom.view.customview.rebound.JunkerReboundLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_key_pad_press"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/junker_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:background="@color/grey_8d"
            android:gravity="center"
            android:text="Hello Word" />
    </com.junker.custom.view.customview.rebound.JunkerReboundLayout>

</androidx.constraintlayout.widget.ConstraintLayout>