<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputNumberView">
        <attr name="max" format="integer" /> <!--最大值-->
        <attr name="min" format="integer" /><!--最小值-->
        <attr name="defaultValue" format="integer" /><!--默认值-->
        <attr name="step" format="integer" /><!--加减计数单位-->
        <attr name="disable" format="boolean" /><!--是否禁用-->
        <attr name="btnBackground" format="reference" /><!--背景图-->
    </declare-styleable>

    <declare-styleable name="LoginPageView">
        <attr name="mainColor" format="color" />
        <attr name="verifyCodeLength" format="integer" />
        <attr name="countDownDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="ReboundLayout">
        <attr name="reBoundOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="resistance" format="float" />
        <attr name="reBoundDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="maxLines" format="integer" />
        <attr name="itemHorizontalMargin" format="dimension" />
        <attr name="itemVerticalMargin" format="dimension" />
        <attr name="textMaxLength" format="integer" />
        <attr name="textColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="KeypadView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="itemPressBg" format="color"/>
        <attr name="itemNormalBg" format="color"/>
    </declare-styleable>
</resources>